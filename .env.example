# Brazilian E-Commerce Analytics - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce_analytics
DB_USER=your_username_here
DB_PASSWORD=your_password_here

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# Plotly API (for advanced visualizations)
PLOTLY_API_KEY=your_plotly_api_key_here
PLOTLY_USERNAME=your_plotly_username_here

# Google APIs (for geographic analysis)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_ANALYTICS_API_KEY=your_google_analytics_key_here

# AWS Configuration (for cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name

# =============================================================================
# FILE PATHS & PROJECT CONFIGURATION
# =============================================================================

# Data directories
DATA_PATH=./data/
RAW_DATA_PATH=./data/raw/
PROCESSED_DATA_PATH=./data/processed/
REPORTS_PATH=./reports/
DASHBOARDS_PATH=./dashboards/

# External data sources
OLIST_DATA_URL=https://www.kaggle.com/datasets/olistbr/brazilian-ecommerce
BACKUP_DATA_PATH=/backup/ecommerce_data/

# =============================================================================
# DASHBOARD & APPLICATION SETTINGS
# =============================================================================

# Streamlit configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Dash configuration
DASH_HOST=127.0.0.1
DASH_PORT=8050
DASH_DEBUG=True

# Flask/API settings (if building APIs)
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# =============================================================================
# EMAIL & NOTIFICATION SETTINGS
# =============================================================================

# Email configuration (for automated reports)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_RECIPIENT=recipient@example.com

# Slack notifications (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================

# Encryption keys (for sensitive data)
ENCRYPTION_KEY=generate_a_secure_key_here
JWT_SECRET_KEY=your_jwt_secret_key

# =============================================================================
# DEVELOPMENT vs PRODUCTION
# =============================================================================

# Environment type
ENVIRONMENT=development
DEBUG=True

# Logging level
LOG_LEVEL=INFO
LOG_FILE=./logs/ecommerce_analytics.log

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Power BI (if using Power BI REST API)
POWERBI_CLIENT_ID=your_powerbi_client_id
POWERBI_CLIENT_SECRET=your_powerbi_client_secret

# Tableau (if using Tableau APIs)
TABLEAU_SERVER_URL=https://your-tableau-server.com
TABLEAU_USERNAME=your_tableau_username
TABLEAU_PASSWORD=your_tableau_password

# =============================================================================
# NOTES FOR USERS:
# =============================================================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values (replace all "your_*_here" placeholders)
# 3. NEVER commit the .env file to git!
# 4. Add .env to your .gitignore file
# 5. For production, use secure methods to set environment variables